<Screen xmlns="runtime-namespace:Game">

	<PanoramaWidget />

	<StackPanelWidget Direction="Horizontal">

		<CanvasWidget Style="{Widgets/TopBarContents}" >
			<LabelWidget Name="TopBar.Label" Text="[RecipaediaRecipesScreen:0]" />
		</CanvasWidget>

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

			<StackPanelWidget Margin="0, 10">
				<BevelledButtonWidget Style="{RecipaediaEX/Styles/ButtonStyle_Previous}" Name="PreviousRecipeInStack" Margin="20, 0" VerticalAlignment="Center"/>
				<BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowLeft}" Name="PreviousRecipe" Margin="0, 0" VerticalAlignment="Center"/>
				<CanvasWidget Name="RecipeDescriptors" Size="Infinity, Infinity" VerticalAlignment="Center">
				</CanvasWidget>
				<CanvasWidget Name="Crafters" Size="70, 60" VerticalAlignment="Center">
				</CanvasWidget>
				<BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowRight}" Name="NextRecipe" Margin="20, 0" VerticalAlignment="Center"/>
			</StackPanelWidget>

		</StackPanelWidget>

	</StackPanelWidget>

</Screen>